pipeline {
    agent {label 'workstation'}
    parameters{
    choice(name: 'ENV', choices: ['dev', 'prod'], description: 'Choose Environment')
    choice(name: 'ACTION', choices: ['dev', 'prod'], description: 'Choose Environment')
    }

    stages {
        stage('Terraform Plan') {
            steps {
                sh 'terraform init -backend-config=dev-${{ENV}}/state.tfvars'
                sh 'terraform plan -var-file=dev-${{ENV}}/input.tfvars'
            }
        }
        stage('Terraform Apply'){
        steps{
            sh 'terraform ${{ACTION}} -var-file=dev-${{ENV}}/input.tfvars -auto-approve'
        }
        }
    }
}